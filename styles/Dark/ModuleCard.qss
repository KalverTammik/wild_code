    border: 1px solid rgba(9,144,143,0.45);
}
QLabel#ProjectNumberBadge:hover {
    background: qlineargradient(x1:0,y1:0,x2:0,y2:1,
        stop:0 rgba(9,144,143,0.26),
        stop:1 rgba(9,144,143,0.18)
    );
    border-color: rgba(9,144,143,0.55);
}

/* Compact tweak */
QFrame#InfocardHeaderFrame[compact="true"] QLabel#ProjectNumberBadge {
    font-size: 9px;
    padding: 1px 6px;
    min-width: 28px;
}
