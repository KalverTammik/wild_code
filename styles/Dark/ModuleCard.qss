/* ===== Module Card (Dark) ===== */

QFrame#ModuleInfoCard {
    background: #1f262d;
    border: 1px solid #2c343d;
    border-radius: 12px;
    padding: 0;
    /* subtle inner highlight at top, darker shadow at bottom */
    background-color: #1f262d;
    background-image: qlineargradient(
        x1:0, y1:0, x2:0, y2:1,
        stop:0 rgba(255,255,255,0.04),
        stop:0.05 rgba(255,255,255,0.02),
        stop:0.92 rgba(0,0,0,0.20), /* darker, starts earlier */
        stop:1 rgba(0,0,0,0.28)     /* stronger bottom shadow */
    );
    transition: 120ms ease;
}
QFrame#ModuleInfoCard:hover {
    border-color: rgba(9,144,143,0.55);
    background-color: #232b33;
}

/* compact density */
QFrame#ModuleInfoCard[compact="true"] {
    border-radius: 10px;
}

/* content area (optional if you want a divider feel) */
QFrame#CardContent { background: transparent; }

/* header labels */
QLabel#ProjectNameLabel {
    color: #e8e9ef;
    font-size: 15px;
    font-weight: 600;
    letter-spacing: 0.2px;
}
QLabel#ProjectClientLabel,
QLabel#ProjectResponsibleLabel,
QLabel#ProjectParticipantsLabel {
    color: #c5c5d2;
    font-size: 12px;
}

/* private icon */
QLabel#ProjectPrivateIcon {
    background: #e53935;
    color: #ffffff;
    border-radius: 8px;
    font-weight: 700;
}
QLabel#DateLine { color:#c5c5d2; font-size:12px; }
QLabel#DateMeta { color:rgba(197,197,210,0.75); font-size:11px; }

QLabel#DateDueLine { color:#c5c5d2; font-size:12px; }
QLabel#DateDueLine[dueState="soon"] {
    color:#ffb74d;
    font-weight:600;           /* bold for soon */
}
QLabel#DateDueLine[dueState="overdue"] {
    color:#e53935;
    font-weight:700;           /* bolder for overdue */
}
QLabel#DateDueLine[dueState="none"] {
    color:rgba(197,197,210,0.75);
    font-weight:400;
}




/* Container */
QFrame#InfocardHeaderFrame { background: transparent; }

/* Name line */


/* Number badge */
QLabel#ProjectNumberBadge {
    padding: 2px 8px;
    border-radius: 10px;
    font-size: 11px;
    font-weight: 600;
    color: #e8f6f6;
    background: rgba(9,144,143,0.18);
    border: 1px solid rgba(9,144,143,0.45);
