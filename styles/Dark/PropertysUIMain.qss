}

#PropertyDetailsWidget {
    background: transparent;
    padding: 8px;
}

#PropertyDetailsWidget QLabel {
    font-size: 12px;
    color: #e6e6e6;
}

#PropertyDetailsWidget QLineEdit,
#PropertyDetailsWidget QTextEdit,
#PropertyDetailsWidget QComboBox,
#PropertyDetailsWidget QSpinBox,
#PropertyDetailsWidget QDoubleSpinBox,
#PropertyDetailsWidget QDateEdit,
#PropertyDetailsWidget QTimeEdit,
#PropertyDetailsWidget QDateTimeEdit {
    background: #2d2d30;
    border: 1px solid #3e3e42;
    border-radius: 4px;
    padding: 4px 8px;
    font-size: 12px;
    color: #e6e6e6;
}

#PropertyDetailsWidget QLineEdit:focus,
#PropertyDetailsWidget QTextEdit:focus,
#PropertyDetailsWidget QComboBox:focus,
#PropertyDetailsWidget QSpinBox:focus,
#PropertyDetailsWidget QDoubleSpinBox:focus,
#PropertyDetailsWidget QDateEdit:focus,
#PropertyDetailsWidget QTimeEdit:focus,
#PropertyDetailsWidget QDateTimeEdit:focus {
    border-color: #4fc3f7;
    outline: none;
}

#PropertyDetailsWidget QComboBox::drop-down {
    border: none;
    background: transparent;
}

#PropertyDetailsWidget QComboBox::down-arrow {
    image: url(down_arrow_dark.png);
    width: 12px;
    height: 12px;
}

#PropertyDetailsWidget QComboBox QAbstractItemView {
    background: #2d2d30;
    border: 1px solid #3e3e42;
    border-radius: 4px;
    selection-background-color: #0e639c;
    selection-color: #4fc3f7;
}

#PropertyDetailsWidget QPushButton {
    background: #0e639c;
    color: #e6e6e6;
    border: none;
    border-radius: 4px;
    padding: 6px 12px;
    font-size: 12px;
    font-weight: bold;
}

#PropertyDetailsWidget QPushButton:hover {
