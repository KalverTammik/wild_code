/* ModulesMain.qss - Dark Theme */
QFrame #PropertyDetailsFrame {
    background: #2d2d30;
    border: none !important;
    border-width: 0 !important;
    border-radius: 12px;
    padding: 0;
    margin: 4px;
    background-image: qlineargradient(
        x1:0, y1:0, x2:0, y2:1,
        stop:0 rgba(255,255,255,0.06),
        stop:0.05 rgba(255,255,255,0.03),
        stop:0.92 rgba(255,255,255,0.08),
        stop:1 rgba(255,255,255,0.12)
    );
    transition: 120ms ease;
}

QFrame #PropertyDetailsFrame:hover {
    border: 1px solid rgba(0,120,212,0.65) !important;
    background-color: #333337;
}


QFrame#PropertyDetailsFrame[compact="true"] { border-radius: 10px; }

/* Informative field labels (bold) */
QLabel#InfoLabel {
    font-weight: bold;
    font-size: 12px;
    color: #e6e6e6;
}

/* Details title (already bold from code) */
QLabel#DetailsTitle {
    font-weight: bold;
    font-size: 11px;
    color: #e6e6e6;
}

/* Property Dialog Styles - Dark Theme */
#DialogTitle {
    font-size: 14px;
    font-weight: bold;
    color: #e6e6e6;
    padding: 8px 12px;
    background: transparent;
}

#PropertyTemplatesList {
    background: #2d2d30;
    border: 1px solid #3e3e42;
    border-radius: 6px;
    padding: 4px;
    selection-background-color: #0e639c;
    selection-color: #4fc3f7;
    alternate-background-color: #333337;
}

#PropertyTemplatesList::item {
    padding: 6px 8px;
    border-bottom: 1px solid #3e3e42;
    color: #e6e6e6;
}

#PropertyTemplatesList::item:selected {
    background: #0e639c;
    color: #4fc3f7;
}

#PropertyTemplatesList::item:hover {
    background: #37373d;
}

#PropertyTemplatesList::item:alternate {
    background: #333337;
}

#PropertyTemplatesList QScrollBar:vertical {
    width: 12px;
    background: #1e1e1e;
    border-radius: 6px;
}

#PropertyTemplatesList QScrollBar::handle:vertical {
    background: #5c5c5c;
    border-radius: 6px;
    min-height: 20px;
}

#PropertyTemplatesList QScrollBar::handle:vertical:hover {
    background: #7c7c7c;
}

#PropertyTemplatesList QScrollBar::add-line:vertical,
#PropertyTemplatesList QScrollBar::sub-line:vertical {
    border: none;
    background: none;
}

#PropertyTemplatesList QScrollBar::up-arrow:vertical,
#PropertyTemplatesList QScrollBar::down-arrow:vertical {
    border: none;
    background: none;
}

#PropertyTemplatesList QScrollBar::add-page:vertical,
#PropertyTemplatesList QScrollBar::sub-page:vertical {
    background: none;
}

#PropertyDetailsScrollArea {
    background: transparent;
    border: none;
}

#PropertyDetailsScrollArea QScrollBar:vertical {
    width: 12px;
    background: #1e1e1e;
    border-radius: 6px;
}

#PropertyDetailsScrollArea QScrollBar::handle:vertical {
    background: #5c5c5c;
    border-radius: 6px;
    min-height: 20px;
}

#PropertyDetailsScrollArea QScrollBar::handle:vertical:hover {
