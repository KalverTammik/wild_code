    color: #999999;
}

#PropertyDetailsWidget QCheckBox {
    font-size: 12px;
    color: #e6e6e6;
}

#PropertyDetailsWidget QCheckBox::indicator {
    width: 16px;
    height: 16px;
    border: 1px solid #3e3e42;
    border-radius: 3px;
    background: #2d2d30;
}

#PropertyDetailsWidget QCheckBox::indicator:checked {
