#PropertyDetailsWidget QGroupBox {
    font-weight: bold;
    font-size: 12px;
    color: #e6e6e6;
    border: 1px solid #3e3e42;
    border-radius: 6px;
    margin-top: 12px;
    padding-top: 12px;
}

#PropertyDetailsWidget QGroupBox::title {
    subcontrol-origin: margin;
    left: 12px;
    padding: 0 8px 0 8px;
    background: #2d2d30;
    color: #e6e6e6;
}

#PropertyDetailsWidget QTabWidget::pane {
    border: 1px solid #3e3e42;
    border-radius: 6px;
    background: #2d2d30;
}

#PropertyDetailsWidget QTabBar::tab {
    background: #1e1e1e;
    border: 1px solid #3e3e42;
    border-bottom: none;
    border-top-left-radius: 6px;
    border-top-right-radius: 6px;
    padding: 6px 12px;
    margin-right: 2px;
    font-size: 12px;
    color: #e6e6e6;
}

#PropertyDetailsWidget QTabBar::tab:selected {
