/* ModulesMain.qss - Light Theme */
QWidget {
    background: #f9f9f9;
    border-radius: 8px;
    border: 1px solid #e0e0e0;
    font-family: 'Segoe UI', Arial, sans-serif;
    color: #222;
}

QLabel {
    font-size: 14px;
    color: #222;
}

QPushButton {
    background: #e6f7f7;
    border-radius: 6px;
    border: 1px solid #b2e0e0;
    padding: 4px 12px;
    color: #09908f;
}
